#!/bin/bash
# Remove non-headless opencv packages installed by mediapipe.
# Then reinstall headless variants to restore cv2 without libGL dependency.
pip uninstall -y opencv-contrib-python 2>/dev/null || true
pip install --force-reinstall --no-deps opencv-contrib-python-headless opencv-python-headless 2>/dev/null || true
echo "post_compile: Replaced non-headless opencv with headless variant"
